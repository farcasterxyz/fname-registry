{
  "name": "fname-registry",
  "version": "0.1.0",
  "description": "fname authority",
  "main": "build/index.js",
  "type": "module",
  "license": "MIT",
  "scripts": {
    "ts-node": "TS_NODE_FILES=true TS_NODE_TRANSPILE_ONLY=true node --experimental-specifier-resolution=node --loader ts-node/esm",
    "start": "npm run ts-node src/index.ts",
    "build": "rm -rf ./build && tsc --project ./tsconfig.json",
    "test": "NODE_OPTIONS='--no-warnings --experimental-vm-modules' ENVIRONMENT=test jest --detectOpenHandles --forceExit",
    "lint": "eslint . --ext .ts",
    "abi": "typechain --node16-modules --target ethers-v6 --out-dir src/abi src/abi/*.abi",
    "lint:fix": "npm run lint -- --fix"
  },
  "dependencies": {
    "@chainlink/ccip-read-server": "^0.2.1",
    "@farcaster/hub-nodejs": "^0.15.8",
    "body-parser": "^2.2.0",
    "dd-trace": "^5.69.0",
    "dotenv": "^17.2.2",
    "ethers": "^6.15.0",
    "express": "^4.21.2",
    "kysely": "^0.28.7",
    "kysely-postgres-js": "^3.0.0",
    "neverthrow": "^8.2.0",
    "pino": "^9.12.0",
    "pino-pretty": "^13.1.1",
    "pm2": "^6.0.13",
    "postgres": "^3.4.7",
    "viem": "^2.37.13"
  },
  "devDependencies": {
    "@typechain/ethers-v6": "^0.5.1",
    "@types/express": "^5.0.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^24.7.0",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^29.7.0",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.2",
    "typescript": "^5.9.3"
  }
}
