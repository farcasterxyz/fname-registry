{
  "name": "fname-registry",
  "version": "0.1.0",
  "description": "fname authority",
  "main": "build/index.js",
  "type": "module",
  "license": "MIT",
  "scripts": {
    "ts-node": "TS_NODE_FILES=true TS_NODE_TRANSPILE_ONLY=true node --experimental-specifier-resolution=node --loader ts-node/esm",
    "start": "npm run ts-node src/index.ts",
    "build": "rm -rf ./build && tsc --project ./tsconfig.json",
    "test": "NODE_OPTIONS='--no-warnings --experimental-vm-modules' ENVIRONMENT=test SQLITE_DB_FILE=:memory: jest --detectOpenHandles --forceExit"
  },
  "dependencies": {
    "dotenv": "^16.1.4",
    "ethers": "^6.4.1",
    "express": "^4.18.2",
    "knex": "^2.4.2",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/sqlite3": "^3.1.8",
    "@types/supertest": "^2.0.12",
    "jest": "^29.5.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.3"
  }
}
